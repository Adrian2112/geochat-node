@import 'nib'

h1 a
  text-decoration: none


div#messages
  border: solid 1px #E6E6E6
  border-radius: 10px
  padding: 10px
  max-height: 300px
  overflow: auto

  p.message
    margin: 0

    &:nth-child(even)
      background: none repeat scroll 0 0 #F8F8F8
      border-radius: 10px

    span.author
      margin: 0 5px 0 0
      font-weight: bold

    abbr.timeago
      float: right
      font-size: 70%
      color: #A3A3A3


form#new_message
  .text
    width: 100%
    margin: 10px 0
